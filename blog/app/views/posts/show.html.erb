<p style="color: green"><%= notice %></p>

<%= render @post %>

<h1><%= @post.title %></h1>

<p><%= @post.content %></p>

<div>
  <%= link_to "Back to posts", posts_path %>

  <%= button_to "Destroy this post", @post, method: :delete%>
</div>

<h2>Comments</h2>
<%= render @post.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>